{% extends "base.html.twig" %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}

<div class="header-title ">
<blockquote class="blockquote text-center">
              <p class="h2 ">Gestion des utilisateurs</h2> </blockquote>
            </div>


            <ul class="nav justify-content-md-end ">
        <li class="nav-item">
           <a href="{{ path('app_back_users_create') }}" class="btn btn-outline-dark me-md-5">Ajouter un utilisateur</a>
        </li>
        </ul>


<div class="table-responsive-sm">
    <table class="table table-striped table align-middle">
        <thead class="table-blue">
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
              
                <th scope="row">{{ user.alias }}</th>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join (', ')}}</td>
                <td>
                 <a href="{{ path('app_back_users_show', {'id': user.id}) }}" class="btn btn-outline-dark" >voir</a>
                  <a href="{{ path('app_users_delete', {'id': user.id}) }}" class="btn btn-outline-dark" >supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
    </table>
    </div>

{% endblock %}